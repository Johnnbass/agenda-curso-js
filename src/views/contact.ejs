<%- include('includes/head') %> <%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">
        <%= ( contact._id ? 'Edite' : 'Crie') %> seu contato abaixo.
      </p>

      <%- include('includes/messages') %>

      <form
        class="form-contact"
        method="POST"
        action="<%= (contact._id ? `/contato/update/${contact._id}` : '/contato/register') %>"
      >
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

        <div class="mb-3">
          <label class="form-label">Nome</label>
          <input
            type="text"
            class="form-control"
            name="name"
            value="<%= contact.name %>"
          />
        </div>

        <div class="mb-3">
          <label class="form-label">Sobrenome</label>
          <input
            type="text"
            class="form-control"
            name="lastname"
            value="<%= contact.lastname %>"
          />
        </div>

        <div class="mb-3">
          <label class="form-label">E-mail</label>
          <input
            type="email"
            class="form-control"
            name="email"
            value="<%= contact.email %>"
          />
        </div>

        <div class="mb-3">
          <label class="form-label">Telefone</label>
          <input
            type="tel"
            class="form-control"
            name="phone"
            value="<%= contact.phone %>"
          />
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
        <a class="btn btn-secondary" href="/">Voltar</a>
        <% if (contact._id) { %>
        <a class="btn btn-info" href="/contato/index">Criar Novo</a>
        <% } %>
      </form>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
